<div {{bind-attr class=':task isCompleted:completed:not-completed'}}>

	{{#unless view.isEditing}}
		{{#if this.isNew}}
			<div class='t-controls'>
				<button class='button float-left' {{action 'edit' target='view'}}>New Task</button>
			</div>
		{{else}}
			
			<div class='t-controls'>
				{{#link-to 'task' this class='t-link-task t-name'}}{{name}}{{/link-to}}
				<br/>
				<span class='float-left t-description'>{{description}}</span>
				
				<button class='float-right' {{action 'edit' target='view'}}>Edit</button>
				<button class='float-right' {{action 'destroyTask'}}>Delete</button>
				<button class='float-right' {{action 'complete' target='view'}}>{{controller.completeButtonMessage}}</button>

				<span class='float-right'>'{{tasks.length}}' Subtasks</span>
				<span class='float-right time'>{{end}}</span>
				<span class='float-right arrow-right'>></span>
				<span class='float-right time'>{{start}}</span>
			</div>
		{{/if}}
	{{else}}
		{{partial 'tasks/form'}}
	{{/unless}}
</div>